            string nam2 = _dateto.Substring(6, 4);
            string thang2 = _dateto.Substring(3, 2);
            string ngay2 = _dateto.Substring(0, 2);
            string dateto = nam2 + "-" + thang2 + "-" + ngay2;

            //dt = DataConn.StoreFillDS("Pro_Report_Daily_QC_fromto", System.Data.CommandType.StoredProcedure, datefrom, dateto);
            dt = DataConn.StoreFillDS("Pro_Report_Daily_QC_fromto_sum", System.Data.CommandType.StoredProcedure, datefrom, dateto);
            datepicker4.Value = ngay + "-" + thang + "-" + nam;
            datepicker5.Value = ngay2 + "-" + thang2 + "-" + nam2;

        }
